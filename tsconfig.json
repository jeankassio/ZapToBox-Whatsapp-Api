{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "CommonJS",
    "target": "ES2020",
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    "strict": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "auto",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
    "exclude": ["node_modules", "dist", "./prisma.config.ts"]
}
