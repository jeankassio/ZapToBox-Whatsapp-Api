// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id               Int      @id @default(autoincrement())
  instance         String
  messageId        String
  remoteJid        String
  senderLid        String?
  fromMe           Boolean
  pushName         String?
  content          Json
  status           String?
  messageTimestamp BigInt

  @@unique([instance, messageId], name: "instance_messageId")
  @@index([instance])
  @@index([remoteJid])
}

model Contact {
  id         Int     @id @default(autoincrement())
  instance   String
  name       String?
  jid        String?
  lid        String?

  @@unique([instance, jid], name: "instance_jid")
  @@unique([instance, lid], name: "instance_lid")
  @@index([instance])
}

model Chat {
  id        Int    @id @default(autoincrement())
  instance  String
  jid       String
  data      Json

  @@unique([instance, jid], name: "instance_chat_jid")
  @@index([instance])
}
